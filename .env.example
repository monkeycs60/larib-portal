# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/your_database_name"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/your_shadow_database"

# Authentication
BETTER_AUTH_SECRET="your-super-secret-key-min-32-chars"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# AI Integration (Optional)
GOOGLE_GENERATIVE_AI_API_KEY="your-gemini-api-key"

# MCP (Model Context Protocol) Services
# Required for Claude Code AI integration
BRAVE_API_KEY="your-brave-search-api-key"
FIGMA_API_KEY="your-figma-api-key"

# Cloudflare R2 Storage
# Required for avatar/file uploads
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret"
R2_BUCKET_NAME="your-bucket-name"
# Optional: set to your public domain (e.g. https://files.example.com) or r2.dev URL
# If not set, images will be served from https://<ACCOUNT_ID>.r2.cloudflarestorage.com/<BUCKET>
R2_PUBLIC_BASE_URL="https://pub-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.r2.dev/your-bucket-name"
R2_REGION="auto"
# Optional: when true, presigned URLs use virtual-hosted style
# https://<BUCKET>.<ACCOUNT_ID>.r2.cloudflarestorage.com/<key>
# This can help with certain CORS edge cases.
R2_VIRTUAL_HOSTED="false"
